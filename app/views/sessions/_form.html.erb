<%= form_with url: session_path, local: true do |form| %>
  <div class="form-floating mb-3">
    <%= form.email_field :email, class: 'form-control', placeholder: 'name@example.com' %>
    <%= form.label :email %>
  </div>
  <div class="form-floating">
    <%= form.password_field :password, class: 'form-control', placeholder: 'Password' %>
    <%= form.label :password %>
  </div>

  <%= form.submit %>
<% end %>
