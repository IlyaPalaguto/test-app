<h1>Создать новый вопрос</h1>
<form action="/tests/<%= params[:test_id] %>/questions" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <input name="question[test_id]" value="<%= params[:test_id] %>" type="hidden">

  <p>
    <label for="question-body">Вопрос:</label>
    <input type="text" name="question[body]" id="question-body">
  </p>

  <input type="submit" value="Создать">
</form>
