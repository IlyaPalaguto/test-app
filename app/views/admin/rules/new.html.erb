<h1>Create rule</h1>
<div class="row mt-3">
  <div class="col col-md-4">
    <%= render 'shared/errors', resource: @test %>
    <div class="card border-secondary bg-light", id="rule-form" >
      <div class="card-body">
        <%= form_with model: [:admin, @rule] do |form| %>
          <div class="form-group create-rule">
            <p>
              <%= form.label :description %>
              <%= form.text_field :description, class: "form-control" %>
            </p>

            <div class="attribute hide">
              <div class="btn-group w-100 mb-2" id='rule-attr' role="group" aria-label="Default button group">
                <button type="button" class="btn btn-outline-dark">Category</button>
                <button type="button" class="btn btn-outline-dark">Level</button>
              </div>

              <p class='hide'>
                <%= form.label :level %>
                <%= form.number_field :level, class: "form-control" %>
              </p>

              <p class='hide'>
                <%= form.label :category_id %>
                <%= form.collection_select :category_id, Category.all, :id, :title, { prompt: true }, { class: 'form-control' } %>
              </p>
            </div>

            <%= form.submit class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
