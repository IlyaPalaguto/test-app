<div class="row mt-3">
  <div class="col col-md-4">
    <%= render 'shared/errors', resource: @test %>
    <div class="card border-secondary bg-light">
      <div class="card-body">
        <%= form_with model: [:admin, @badge] do |form| %>
          <div class="form-group">
            <p>
              <%= form.label :title %>
              <%= form.text_field :title, class: "form-control" %>
            </p>

            <p>
              <%= form.label :image %>
              <%= form.url_field :image, class: "form-control" %>
            </p>

            <p>
              <%= form.label :rule_id %>
              <%= form.collection_select :rule_id, Rule.all, :id, :description, { prompt: false }, { class: "form-control" } %>
            </p>

            <%= form.submit class:'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

